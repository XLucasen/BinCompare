<Window x:Class="BinCompare.DataEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="编辑数据" 
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        Width="600" 
        Height="400"
        Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题区 -->
        <Border Grid.Row="0" Background="#F5F5F5" Padding="20,15">
            <StackPanel>
                <TextBlock Text="编辑数据" FontSize="14" FontWeight="Bold" Foreground="#333"/>
                <TextBlock Name="AddressInfo" Text="" FontSize="12" Foreground="#666" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- 编辑区 -->
        <Border Grid.Row="1" Padding="20">
            <StackPanel>
                <TextBlock Text="十六进制数据（空格分隔）:" FontSize="12" Foreground="#333" Margin="0,0,0,8"/>
                <TextBox Name="HexDataTextBox" 
                         Text="" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         FontFamily="Consolas"
                         FontSize="12"
                         Padding="10"
                         Background="White"
                         BorderBrush="#CCCCCC"
                         BorderThickness="1"
                         Height="200"
                         VerticalAlignment="Top"/>
                <TextBlock Name="ErrorMessage" Text="" FontSize="11" Foreground="#CC0000" Margin="0,8,0,0"/>
            </StackPanel>
        </Border>

        <!-- 按钮区 -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="BtnConfirm" Content="确认" Width="80" Height="36" Margin="0,0,10,0" 
                        Background="#4CAF50" Foreground="White" FontSize="12" Click="BtnConfirm_Click"/>
                <Button Name="BtnCancel" Content="取消" Width="80" Height="36" 
                        Background="#999999" Foreground="White" FontSize="12" Click="BtnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
